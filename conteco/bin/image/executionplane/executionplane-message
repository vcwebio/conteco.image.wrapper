#!/usr/bin/env bash

timestamp=$( to-timestamp )
action=$1
shift
arguments=$( echo "$@" | sed 's/"/\\"/g' | jq -aR . )

printf '{ "@timestamp": "%s", "source":"executionplane", "executiontag": "%s", "executionplane": %s, "action": "%s", "arguments": %s}\n' \
"$timestamp" "${CONTECO_EXECUTIONTAG}" "${CONTECO_EXECUTIONPLANE}" "$action" "$arguments"
