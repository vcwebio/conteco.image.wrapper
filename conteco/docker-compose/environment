#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_SERVICES='image.wrapper'
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_IMAGE_ENVIRONMENT,$CONTECO_DC_IMAGE_COMMAND,$CONTECO_DC_IMAGE_VOLUMES,$CONTECO_DC_IMAGE_NETWORKS,$CONTECO_DC_IMAGE_PORTS,$CONTECO_DC_IMAGE_DEPLOY_MODE,$CONTECO_DC_IMAGE_DEPLOY_REPLICAS,$CONTECO_DC_IMAGE_DEPLOY_RESOURCES_LIMITS_CPUS,$CONTECO_DC_IMAGE_DEPLOY_RESOURCES_RESERVATIONS_CPUS,$CONTECO_DC_IMAGE_DEPLOY_RESOURCES_LIMITS_MEMORY,$CONTECO_DC_IMAGE_DEPLOY_RESOURCES_RESERVATIONS_MEMORY'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_IMAGE_ENVIRONMENT=
export CONTECO_DC_IMAGE_COMMAND="'usleep 500000000'"
export CONTECO_DC_IMAGE_PORTS=
export CONTECO_DC_IMAGE_VOLUMES=
export CONTECO_DC_IMAGE_NETWORKS=
export CONTECO_DC_IMAGE_DEPLOY_MODE="replicated"
export CONTECO_DC_IMAGE_DEPLOY_REPLICAS="1"
export CONTECO_DC_IMAGE_DEPLOY_RESOURCES_LIMITS_CPUS="0.75"
export CONTECO_DC_IMAGE_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.0"
export CONTECO_DC_IMAGE_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export CONTECO_DC_IMAGE_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="5m"
# END GLOBAL SETTINGS

# START TOPLEVEL SETTINGS
export CONTECO_DC_GLOBAL_VOLUMES=
export CONTECO_DC_GLOBAL_NETWORKS=
# END TOPLEVEL SETTINGS

